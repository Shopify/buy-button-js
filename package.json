{
  "name": "shopify-buy-ui",
  "version": "0.0.0",
  "description": "The JS Buy UI library allows merchants to build Shopify interfaces into any website",
  "main": "build/shopify-buy-ui.js",
  "repository": "git@github.com:Shopify/shopify-buy-ui.git",
  "scripts": {
    "start": "rm -rf tmp && mkdir tmp && npm run watch:src & npm run watch:css & npm run serve",
    "build": "npm run clean && npm run build:cjs && npm run build:globals && npm run polyfill && npm run uglify",
    "test": "./test-ci",
    "lint": "eslint src/*",
    "serve": "http-server",
    "clean": "rm -rf build && mkdir build",
    "styles": "npm run styles:embeds && npm run styles:host",
    "styles:embeds": "NODE_PATH=./node_modules node ./script/embed-styles",
    "styles:host": "NODE_PATH=./node_modules node ./script/host-styles",
    "start:adapter": "rm -rf tmp && mkdir tmp && npm run watch:src:adapter & npm run watch:css & npm run serve",
    "watch:src": "watchify src/shopify-buy-ui.js -t babelify --outfile tmp/shopify-buy-ui.dev.js -v",
    "watch:src:adapter": "watchify src/legacy/adapter.js -t babelify --outfile tmp/legacy-adapter.dev.js -v",
    "watch:test": "npm run styles && node ./script/watch-tests",
    "watch:css": "watch 'npm run styles' src/styles/embeds/sass src/styles/host/sass",
    "build:cjs": "NODE_PATH=./node_modules npm run styles && babel ./src --out-dir ./build",
    "build:globals": "npm run build:globals:lib && npm run build:globals:adapter",
    "build:globals:lib": "browserify --ignore buffer build/shopify-buy-ui.js --outfile build/shopify-buy-ui.globals.js",
    "build:globals:adapter": "browserify --ignore buffer build/legacy/adapter.js --outfile build/adapter.globals.js",
    "build:test": "npm run styles && npm run build:test:unit && npm run build:test:integration",
    "build:test:unit": "browserify test/unit-tests.js -t babelify --outfile test/build/unit-tests.js",
    "build:test:integration": "browserify test/integration-tests.js -t babelify --outfile test/build/integration-tests.js",
    "polyfill": "npm run polyfill:lib && npm run polyfill:adapter",
    "polyfill:lib": "NODE_PATH=./node_modules node ./script/polyfill.js shopify-buy-ui ",
    "polyfill:adapter": "NODE_PATH=./node_modules node ./script/polyfill.js adapter",
    "uglify": "npm run uglify:lib && npm run uglify:adapter",
    "uglify:lib": "uglifyjs build/shopify-buy-ui.globals.polyfilled.js --output build/shopify-buy-ui.globals.polyfilled.min.js",
    "uglify:adapter": "uglifyjs build/adapter.globals.polyfilled.js --output build/adapter.globals.polyfilled.min.js",
    "lint-ci": "eslint src -f junit > \"${lint_output_file}\"",
    "pretest": "npm run build:test",
    "testem-ci": "testem ci -R xunit > \"${test_output_file}\"",
    "test": "./test-ci",
    "test:dev": "npm run watch:test | testem",
    "postinstall": "npm run build"
  },
  "author": "Shopify Inc.",
  "license": "MIT",
  "devDependencies": {
    "babel": "6.5.2",
    "babel-cli": "6.11.4",
    "babel-core": "6.10.4",
    "babel-plugin-check-es2015-constants": "6.8.0",
    "babel-plugin-transform-es2015-arrow-functions": "6.8.0",
    "babel-plugin-transform-es2015-block-scoped-functions": "6.8.0",
    "babel-plugin-transform-es2015-block-scoping": "6.10.1",
    "babel-plugin-transform-es2015-classes": "6.9.0",
    "babel-plugin-transform-es2015-computed-properties": "6.8.0",
    "babel-plugin-transform-es2015-destructuring": "6.9.0",
    "babel-plugin-transform-es2015-duplicate-keys": "6.8.0",
    "babel-plugin-transform-es2015-function-name": "6.9.0",
    "babel-plugin-transform-es2015-literals": "6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.11.5",
    "babel-plugin-transform-es2015-object-super": "6.8.0",
    "babel-plugin-transform-es2015-parameters": "6.11.4",
    "babel-plugin-transform-es2015-shorthand-properties": "6.8.0",
    "babel-plugin-transform-es2015-spread": "6.8.0",
    "babel-plugin-transform-es2015-template-literals": "6.8.0",
    "babel-plugin-transform-es2015-typeof-symbol": "6.8.0",
    "babelify": "7.3.0",
    "chai": "3.5.0",
    "eslint": "2.13.1",
    "eslint-plugin-shopify": "13.0",
    "fetch-pretender": "1.5.0",
    "http-server": "0.9.0",
    "mocha": "2.5.3",
    "pretender": "1.1.0",
    "sinon": "1.17.5",
    "testem": "1.9.1",
    "watch": "0.19.1",
    "watchify": "3.7.0"
  },
  "dependencies": {
    "uglify-js": "2.7.0",
    "browserify": "13.1.0",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-plugin-transform-runtime": "6.12.0",
    "babel-runtime": "6.11.6",
    "hogan.js": "3.0.2",
    "morphdom": "1.4.6",
    "node-sass": "3.8.0",
    "rollup": "0.34.1",
    "rollup-plugin-commonjs": "3.3.1",
    "rollup-plugin-node-resolve": "1.7.1",
    "shopify-buy": "0.2.2"
  }
}
