#!/bin/bash

set +x

mkdir -p $CIRCLE_TEST_REPORTS/xunit

export test_output_file="${CIRCLE_TEST_REPORTS}/xunit/test-output.xml"
export lint_output_file="${CIRCLE_TEST_REPORTS}/xunit/lint-output.xml"

(npm run lint-ci)
test_status=$?

(npm run testem-ci)
lint_status=$?

exit $((test_status + lint_status))
e2e_status=$?

export selenium_output_path="${CIRCLE_TEST_REPORTS}/xunit/"

npm run lint-ci && npm run testem-ci
